<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/descAnnonce"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/dateAnnonce"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nameAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:text="Tire Annonce"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/photoAnnonce"
        android:layout_width="100dp"
        android:adjustViewBounds="true"
        android:layout_height="90dp"
        android:layout_below="@+id/nameAnnonce"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/descAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Description"
        android:layout_marginRight="120dp"
        android:maxLength="50"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/nameAnnonce"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PrixAnnonce"
        android:layout_alignBaseline="@+id/dateAnnonce"
        android:layout_alignBottom="@+id/dateAnnonce"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date Annonce"
        android:id="@+id/dateAnnonce"
        android:layout_below="@+id/photoAnnonce"
        android:layout_alignStart="@+id/photoAnnonce" />

    <TextView
        android:text="DT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/PrixAnnonce"
        android:layout_alignBottom="@+id/PrixAnnonce"
        android:layout_toEndOf="@+id/PrixAnnonce" />

</RelativeLayout>